<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo de gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background">

        <!-- Título de la aplicación -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="Turismonroy"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light" />

        <!-- Texto de Mejores momentos -->
        <TextView
            android:id="@+id/best_moments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Mejores momentos"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@android:color/white" />

        <!-- Sección de botones para Foto y Video -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_capture_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="Capturar Foto"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button_record_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="Grabar Video"
                android:backgroundTint="#FF5722"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Botón para ir a la Galería -->
        <Button
            android:id="@+id/button_open_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Ir a Galería"
            android:backgroundTint="#3E4EB8"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>
